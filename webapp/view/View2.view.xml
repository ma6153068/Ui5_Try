<mvc:View 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="inkit.hsn.fiori.controller.View2" >

<Page title="{name}" showNavButton="true" navButtonPress="back">
    <content>
        <ObjectHeader  title="{name}" intro="{type}" number="{price}" numberUnit="{currency}" icon="{imageURL}" ></ObjectHeader>  
    </content>

<IconTabBar>
    <items>

        <IconTabFilter text="Fruits" icon="sap-icon://information" >
            <core:Fragment fragmentName="inkit.hsn.fiori.fragments.Info" type="XML" ></core:Fragment>       
        </IconTabFilter>

        <IconTabFilter text="Supplier" icon="sap-icon://table-chart"> 
            <core:Fragment fragmentName="inkit.hsn.fiori.fragments.Supplier" type="XML" ></core:Fragment>
        </IconTabFilter>

        <IconTabFilter text="CheckBox" icon="sap-icon://checklist-item-2">
             <core:Fragment fragmentName="inkit.hsn.fiori.fragments.Cities" type="XML" ></core:Fragment>
        </IconTabFilter>

        <IconTabFilter text="Say hello" icon="sap-icon://dropdown">
            <core:Fragment fragmentName="inkit.hsn.fiori.fragments.Dekho" type="XML"></core:Fragment>
        </IconTabFilter>

    </items>
</IconTabBar>

    <!-- <Button text="Back" press="back"> </Button> -->

    <footer>
        <Toolbar>
        <ToolbarSpacer/>
            <Button text="Save" icon="sap-icon://save" type="Accept" press="onSave"></Button>
            <Button text="Cancel" icon="sap-icon://cancel" type="Reject" press="onCancel"></Button>
        </Toolbar>
    </footer>

</Page>

</mvc:View>